@model LojaNinja.Dominio.Pedido

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@ViewBag.MensagemSucesso != null)
{
    <h3 class="alert alert-success">@ViewBag.MensagemSucesso</h3>
}

<div>
    <h1>Detalhes</h1>
    <hr />

    <dl class="dl-horizontal">
        <dt>
           <h4>Data Pedido:</h4>
        </dt>

        <dd>
            <h4>@Model.DataPedido.ToShortDateString()</h4>
        </dd>

        <dt>
           <h4>Data Desejada:</h4> 
        </dt>

        <dd>
            <h4>@Model.DataEntregaDesejada.ToShortDateString()</h4>
        </dd>

        <dt>
            <h4>Produto:</h4>
        </dt>

        <dd>
            <h4>@Model.NomeProduto</h4>
        </dd>

        <dt>
            <h4>Valor:</h4>
        </dt>

        <dd>
            <h4>R$ @Model.Valor.ToString("0.00")</h4>
        </dd>

        <dt>
            <h4>Cliente:</h4>
        </dt>

        <dd>
            <h4>@Model.NomeCliente</h4>
        </dd>

        <dt>
            <h4>Cidade:</h4>
        </dt>

        <dd>
            <h4>@Model.Cidade</h4>
        </dd>

        <dt>
            <h4>Estado:</h4>
        </dt>

        <dd>
            <h4>@Model.Estado</h4>
        </dd>

        <dt>
            <h4>Urgente?</h4>
        </dt>

        <dd>
            <h4>
                @{if (Model.PedidoUrgente)
                    {
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-thumbs-down"></span>
                    }
                }
            </h4>
        </dd>

    </dl>
</div>
<p>

    <a class="btn btn-default btn-sm" href="~/Pedido/Manter/@Model.Id">Editar</a>
    <a class="btn btn-default btn-sm" href="~/Pedido/Listagem">Listagem</a>
</p>
